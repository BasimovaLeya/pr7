number = input("Введите целое число в 10-тичной системе счисления: ")

if number.lstrip('-').isdigit():
    number = int(number)
    if number >= 0:
        bin = bin(number)[2:]
        oct = oct(number)[2:]
    else:
        bin = '-' + bin(abs(number))[2:]  #подставление минуса перед значением для отрицательных чисел
        oct = '-' + oct(abs(number))[2:]  #подставление минуса перед значением для отрицательных чисел
    print(f"Ваше число в двоичной системе счисления: {bin}")
    print(f"Ваше число в восьмеричной системе счисления: {oct}")
else:
    print("Ошибка: введите корректное целое число.")
